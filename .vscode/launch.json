{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug GTK4 App",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/hello-world-gtk-app",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Fix GTK critical signals",
                    "text": "handle SIGTRAP noprint nostop",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "make build",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}
